# Server Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database connection string from Supabase
# Format: postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@your-project-ref.supabase.co:5432/postgres

# Port for the server to listen on
PORT=4000

# JWT secret for signing authentication tokens
# Generate a strong random string for production (e.g., use: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Node environment (development, production, etc.)
NODE_ENV=development

# Supabase Service Key (optional - for direct Supabase API access if needed)
# This is the service_role key from your Supabase project settings
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
